# FPV Copilot Sky - Nginx Configuration
# This serves the frontend static files and proxies API requests to the backend

# Upstream backend with keepalive connections for better performance
upstream fpvcopilot_backend {
    server 127.0.0.1:8000;
    keepalive 32;  # Keep connections alive
}

server {
    listen 80;
    listen [::]:80;
    
    server_name _;
    
    # Increase client body size for file uploads
    client_max_body_size 100M;
    
    # TCP optimizations for low latency
    tcp_nodelay on;
    tcp_nopush on;
    
    # Root directory for frontend build
    root /opt/FPVCopilotSky/frontend/client/dist;
    index index.html;
    
    # Logging (reduced for performance in production)
    access_log off;
    error_log /var/log/nginx/fpvcopilot-sky-error.log warn;
    
    # Compression
    gzip on;
    gzip_vary on;
    gzip_min_length 256;
    gzip_comp_level 4;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/json application/xml+rss image/svg+xml;
    
    # API proxy to backend with keepalive
    location /api/ {
        proxy_pass http://fpvcopilot_backend;
        proxy_http_version 1.1;
        proxy_set_header Connection "";  # Required for keepalive
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Optimized buffers
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
        
        # Timeouts - generous for VPN/remote access with latency
        proxy_connect_timeout 10s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;
    }
    
    # WebSocket proxy with optimized settings
    location /ws {
        proxy_pass http://fpvcopilot_backend;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket timeouts - keep persistent connections alive
        proxy_connect_timeout 30s;
        proxy_send_timeout 7d;
        proxy_read_timeout 7d;
    }
    
    # Static files with caching
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        try_files $uri =404;
    }
    
    # Frontend routes (SPA fallback)
    location / {
        try_files $uri $uri/ /index.html;
    }
}
