[flake8]
max-line-length = 120
exclude =
    __pycache__,
    *.pyc,
    venv,
    .git,
    .venv,
    build,
    dist,
    *.egg-info,
    tests/test_mavlink_bridge.py
extend-ignore = E203,W503,E501,F401,F841,E402,W291,W293,E302,E305,E722,C901,F811,F824,F541
per-file-ignores =
    __init__.py:F401,E402
    tests/*.py:F401,F811,F841,E501
max-complexity = 35
