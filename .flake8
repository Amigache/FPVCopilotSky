[flake8]
max-line-length = 120
exclude = 
    __pycache__,
    *.pyc,
    venv,
    .git,
    .venv,
    build,
    dist,
    *.egg-info
extend-ignore = 
    E203,  # Whitespace before ':' (conflicts with black)
    W503,  # Line break before binary operator (conflicts with black)
    E501   # Line too long (handled by black)
per-file-ignores =
    __init__.py:F401  # Allow unused imports in __init__.py
max-complexity = 15
